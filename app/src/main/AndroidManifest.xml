<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raghav.sweet_home">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".provider" />

        <intent-filter>
            <action android:name="com.example.raghav.sweet_home.provider" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity android:name=".Login" />

        <intent-filter>
            <action android:name="com.example.raghav.sweet_home.Login" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity android:name=".Register">
            <intent-filter>
                <action android:name="com.example.raghav.sweet_home.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".User" />
        <activity android:name=".Purchase"></activity>
    </application>

</manifest>